<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <header class="header"> <!-- CABECERA DE NUESTRA PAGINA -->
      <a href="#" class="logo">Tu Clima en Tonala</a> <!-- LOGO -->
      <nav class="navbar"> <!-- SECCIONES DE NUESTRA PAGINA -->
        <a href="#seccionInicio" scroll>Inicio</a>
        <a href="#seccion2" scroll>Graficas</a>
        <a href="#seccion3" scroll>Más</a>
      </nav>
    </header>

    <!-- SECCION INICIO -->
    <section class="seccionInicio" id="seccionInicio">

      <div class="titulo">
        <h1>Bienvenido</h1>
      </div>

      <div class="contenedorPadreInicio">
        <div class="tiempo" ">
          <div class="localizacion">
            <h1 class="txtClima">Clima en Tonalá</h1>
          </div>

          <div class="weather-box">
            <box>
              <div class="info-weather">
                <div class="weather"></div>
                <img src="/stylesheets/img/sol.png" alt="">
                <p class="temperaturaT"><span>ºC</span></p> 
                <p class="description"></p> 
              </div>
            </box>

          </div>

          <div class="weather-details">
            <div class="humedad">
              <div class="text">
                <i class='bx bx-water'></i>
                <div class="info-humidity">
                  <span>0%</span>
                </div>
                <p>Humedad</p>
              </div>

              <div class="wind">
                
                <div class="text">
                  <i class='bx bx-wind'></i>
                  <div class="info-humidity">
    
                    <span>0Km/h</span>
                  </div>
                  <p>Viento</p>
                  
                </div>

            </div>
          </div>
          
        </div>

      </div>

      <div class="prediccion">
        aqui va predicciones
      </div>
      
    </section>

  <br>

    <!-- OTRA SECCION -->
  <section class="seccion2" id="seccion2">
    <br>
  
    <div class="graficas">
        <div id="chartContainer">
          <div id="titu">
              <h2>Historicos a lo largo de cinco años</h2>
          </div>
          <canvas id="myChart"></canvas>
      </div>

      <!-- Botones de selección -->
      <div id="seleccion" class="botonesE"> 
          <br>
          <button type="button" class="btn btn-info" onclick="mostrarGrafica('temperatura')">Temperatura</button> <br>
          <button type="button" class="btn btn-info" onclick="mostrarGrafica('humedad')">Humedad</button> <br>
          <button type="button" class="btn btn-info" onclick="mostrarGrafica('presion')">Presion</button> <br>
          <div id="seleccion2">
              <!-- Botón para mostrar el modal -->
                  <!-- Button para abrir el modal -->
              <!-- <button id="botonAvanzado" type="button" class="btn btn-info">Avanzado</button> -->
          </div>
      </div>
    </div>
  </div>

    <script>
      // JavaScript para redirigir al archivo /graficaP
      document.getElementById("botonAvanzado").addEventListener("click", function() {
        window.location.href = "/graficaP";
      });
    </script>


    <script>
    function seleccionarAnio(anio) {
      var botonAnio = document.getElementById("dropdownMenuButtonAnio");
      var inputAnio = document.getElementById("anioSeleccionado");
      botonAnio.textContent = anio;
      inputAnio.value = anio;
    }

    function seleccionarMes(mes) {
      var botonMes = document.getElementById("dropdownMenuButtonMes");
      var inputMes = document.getElementById("mesSeleccionado");
      botonMes.textContent = mes;
      inputMes.value = mes;
    }
    </script>


    <script>
    function enviarDatosSeleccionados() {
      // Obtener los valores seleccionados de año y mes
      var anioSeleccionado = document.getElementById("dropdownMenuButtonAnio").textContent;
      var mesSeleccionado = document.getElementById("dropdownMenuButtonMes").textContent;

      // Enviar los datos al archivo JavaScript
      mostrarDatosSeleccionados(anioSeleccionado, mesSeleccionado);
    }
    </script>


  </section>
  <br>





  <section class="seccion3" id="seccion3">
    <div class="titulo">
      <h1>Seccion3</h1>
    </div>
    <div class="informacion">
      
    </div>

  </section>

