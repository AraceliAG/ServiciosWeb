


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gráfica con Chart.js</title>
    <!-- Agrega la referencia a la biblioteca Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="/stylesheets/style.css" rel="stylesheet" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   
</head>
<body>

   

    <div class="containerPadre">
        <!-- Contenedor div para la gráfica -->
        <div id="chartContainer">
            <div id="titu">
                <h2>Historicos a lo largo de cinco años</h2>
            </div>
            <canvas id="myChart"></canvas>
        </div>

        <!-- Botones de selección -->
        <div id="seleccion" class="botonesE"> 
            <br>
            <button type="button" class="btn btn-info" onclick="mostrarGrafica('temperatura')">Temperatura</button> <br>
            <button type="button" class="btn btn-info" onclick="mostrarGrafica('humedad')">Humedad</button> <br>
            <button type="button" class="btn btn-info" onclick="mostrarGrafica('presion')">Presion</button> <br>
            <div id="seleccion2">
                <!-- Botón para mostrar el modal -->
                    <!-- Button para abrir el modal -->
                <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal">Avanzado</button>
            </div>
        </div>
    </div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Filtro Avanzado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Selecciona un año</h3>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButtonAnio" data-bs-toggle="dropdown" aria-expanded="false">
                        Año
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAnio">
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio('Todos los años')">Todos los años</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2018)">2018</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2019)">2019</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2020)">2020</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2021)">2021</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2022)">2022</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2023)">2023</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2024)">2024</a></li>
                    </ul>
                </div>

                <h3>Selecciona un mes</h3>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButtonMes" data-bs-toggle="dropdown" aria-expanded="false">
                        Mes
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonMes">
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Todos los meses')">Todos los meses</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Enero')">Enero</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Febrero')">Febrero</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Marzo')">Marzo</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Abril')">Abril</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Mayo')">Mayo</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Junio')">Junio</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Julio')">Julio</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Agosto')">Agosto</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Septiembre')">Septiembre</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Octubre')">Octubre</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Noviembre')">Noviembre</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Diciembre')">Diciembre</a></li>
                    </ul>
                </div>
            </div>



            <div class="modal-footer">
                <form id="parametros" method="post" action="/grafica" onsubmit="mostrarDatosSeleccionados()">
                    <input type="hidden" name="anioSeleccionado" id="anioSeleccionado">
                    <input type="hidden" name="mesSeleccionado" id="mesSeleccionado">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </form>
               
            </div>
        </div>
    </div>
</div>


<script>
    function seleccionarAnio(anio) {
        var botonAnio = document.getElementById("dropdownMenuButtonAnio");
        var inputAnio = document.getElementById("anioSeleccionado");
        botonAnio.textContent = anio;
        inputAnio.value = anio;
    }

    function seleccionarMes(mes) {
        var botonMes = document.getElementById("dropdownMenuButtonMes");
        var inputMes = document.getElementById("mesSeleccionado");
        botonMes.textContent = mes;
        inputMes.value = mes;
    }
</script>



    <!-- Script para cargar Chart.js y el código JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/stylesheets/javascripts/graficas.js"></script>
    <script src="/stylesheets/javascripts/modal.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

