<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grafica Avanzada</title>
    <!-- Agrega la referencia a la biblioteca Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="/stylesheets/style.css" rel="stylesheet" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   
</head>
<body2>

   

    <div class="containerPadre">
        <!-- Contenedor div para la gráfica -->
        <div id="chartContainer">
            <div id="titu">
                <h2>Aqui puedes modificar Los Diferentes Parametros</h2>
            </div>
            <canvas id="myChart"></canvas>
        </div>

        <!-- Botones de selección -->
        <div id="seleccion" class="botonesE"> 
            <div id="seleccion2">
                <!-- Botón para mostrar el modal -->
                    <!-- Button para abrir el modal -->
                <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal">Modificar Parametros</button>
            </div>
        </div>
    </div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Filtro Avanzado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Selecciona un año</h3>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButtonAnio" data-bs-toggle="dropdown" aria-expanded="false">
                        Año
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAnio">
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio('Todos los años')">Todos los años</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2018)">2018</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2019)">2019</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2020)">2020</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2021)">2021</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2022)">2022</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2023)">2023</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarAnio(2024)">2024</a></li>
                    </ul>
                </div>

                <h3>Selecciona un mes</h3>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButtonMes" data-bs-toggle="dropdown" aria-expanded="false">
                        Mes
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonMes">
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes('Todos los meses')">Todos los meses</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(1)">Enero</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(2)">Febrero</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(3)">Marzo</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(4)">Abril</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(5)">Mayo</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(6)">Junio</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(7)">Julio</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(8)">Agosto</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(9)">Septiembre</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(10)">Octubre</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(11)">Noviembre</a></li>
                        <li><a class="dropdown-item" href="#" onclick="seleccionarMes(12)">Diciembre</a></li>
                    </ul>
                </div>

                <h3>Selecciona el dato de la grafica</h3>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuSeccion" data-bs-toggle="dropdown" aria-expanded="false">
                    Tipo
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuSeccion">
                    <li><a class="dropdown-item" href="#" onclick="seleccionarSeccion('temperatura')">Temperatura</a></li>
                    <li><a class="dropdown-item" href="#" onclick="seleccionarSeccion('humedad')">Humedad</a></li>
                    <li><a class="dropdown-item" href="#" onclick="seleccionarSeccion('presion')">Presion</a></li>
                </ul>
            </div>



            <div class="modal-footer">
                <form id="parametros" method="post" action="/grafica" onsubmit="mostrarDatosSeleccionados()">
                    <input type="hidden" name="anioSeleccionado" id="anioSeleccionado">
                    <input type="hidden" name="mesSeleccionado" id="mesSeleccionado">
                    <input type="hidden" name="seccion" id="seccion">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </form>
               
            </div>
        </div>
    </div>
</div>



<script>
    function seleccionarAnio(anio) {
        var botonAnio = document.getElementById("dropdownMenuButtonAnio");
        var inputAnio = document.getElementById("anioSeleccionado");
        botonAnio.textContent = anio;
        inputAnio.value = anio;
    }

    function seleccionarMes(mes) {
        var botonMes = document.getElementById("dropdownMenuButtonMes");
        var inputMes = document.getElementById("mesSeleccionado");
        botonMes.textContent = mes;
        inputMes.value = mes;
    }

    function seleccionarSeccion(seccion) {
        var botonSeccion = document.getElementById("dropdownMenuSeccion");
        var inputSeccion = document.getElementById("seccion");
        botonSeccion.textContent = seccion;
        inputSeccion.value = seccion;
    }
</script>


<script>
    function enviarDatosSeleccionados() {
        // Obtener los valores seleccionados de año y mes
        var anioSeleccionado = document.getElementById("dropdownMenuButtonAnio").textContent;
        var mesSeleccionado = document.getElementById("dropdownMenuButtonMes").textContent;

        // Enviar los datos al archivo JavaScript
        mostrarDatosSeleccionados(anioSeleccionado, mesSeleccionado);
    }
</script>






    <!-- Script para cargar Chart.js y el código JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- <script src="/stylesheets/javascripts/graficas.js"></script> -->
    <script src="/stylesheets/javascripts/graficas.js"></script>
 
    <script src="/stylesheets/javascripts/modal.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body2>
</html>

